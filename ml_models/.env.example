# ML Models API Configuration

# Application Settings
APP_NAME=ML Models API
APP_VERSION=1.0.0
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000

# CORS Settings (comma-separated URLs)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001

# Model Settings
DEFAULT_MAX_LENGTH=130
DEFAULT_MIN_LENGTH=30
CACHE_DIR=./data/model_cache

# Summarization Model Settings
SUMMARIZATION_MODEL_NAME=facebook/bart-large-cnn
SUMMARIZATION_MAX_INPUT_LENGTH=1024
SUMMARIZATION_LENGTH_PENALTY=2.0
SUMMARIZATION_NUM_BEAMS=4
SUMMARIZATION_EARLY_STOPPING=true

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=app.log
